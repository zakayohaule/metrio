{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "strict": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": [
        "./resources/js/*"
      ],
      "@layouts/*": [
        "./resources/js/@layouts/*"
      ],
      "@layouts": [
        "./resources/js/@layouts"
      ],
      "@core/*": [
        "./resources/js/@core/*"
      ],
      "@core": [
        "./resources/js/@core"
      ],
      "@axios": [
        "./resources/js/plugins/axios"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "skipLibCheck": true,
    "types": [
      "vite/client",
      "vite-plugin-pages/client",
      "vite-plugin-vue-layouts/client"
    ]
  },
  "include": [
    "vite.config.*",
    "env.d.ts",
    "shims.d.ts",
    "./resources/js/**/*",
    "./resources/js/**/*.vue",
    "themeConfig.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "./resources/js/@iconify/*"
  ]
}
